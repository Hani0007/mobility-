<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="38dp"
        android:layout_height="26dp"
        android:src="@drawable/arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textviewinfo"
        android:layout_width="198dp"
        android:layout_height="53dp"
        android:text="Contact Information"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="65dp"
        android:layout_height="64dp"
        android:src="@drawable/pic"
        android:layout_below="@+id/textviewinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="33dp"
        android:fontFamily="sans-serif-medium"
        android:text="Managing Director  @interVenturePartners"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="69dp"
        android:layout_height="30dp"
        android:layout_below="@+id/information"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="132dp"
        android:fontFamily="sans-serif-medium"
        android:text=" Email"
        android:textColor="#007BFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="220dp"
        android:layout_height="31dp"
        android:layout_below="@+id/information"
        android:layout_marginStart="54dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@+id/textView18"
        android:fontFamily="sans-serif-medium"
        android:text="   meeroo2@gmail.com"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phoneno"
        android:layout_width="213dp"
        android:layout_height="28dp"
        android:layout_below="@+id/textView19"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="75dp"
        android:text="  051 567 654897"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_below="@+id/phoneno"

        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="-88dp"
        android:text=" Fax"
        android:textColor="#007BFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fax"
        android:layout_width="186dp"
        android:layout_height="33dp"
        android:layout_below="@+id/phoneno"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="94dp"
        android:text="  +92 654 876 456"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textviewname"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_below="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="99dp"
        android:text=" Sara Lockchart"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_below="@+id/textView18"

        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="37dp"
        android:text=" Phone"
        android:textColor="#077BFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
